<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marketbg"
    tools:context=".fragments.Store_Fragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bundleImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="TODO"
        android:elevation="11dp"
        android:padding="2dp"
        android:src="@drawable/border"

        app:layout_constraintBottom_toBottomOf="@+id/bundleFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout9"
        app:strokeColor="@color/Valo_Color"
        app:strokeWidth="2.5dp" />

    <GridLayout
        android:id="@+id/ItemOfferGrid"
        android:layout_width="wrap_content"
        android:layout_height="285dp"
        android:background="@drawable/marketbg"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bundleFrame">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ItemOffer1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="3dp"
            android:src="@drawable/border"
            app:strokeColor="@color/Valo_Color"
            app:strokeWidth="2.5dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="169dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ItemOffer2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="3dp"
            android:src="@drawable/border"
            app:strokeColor="@color/Valo_Color"
            app:strokeWidth="2.5dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="169dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ItemOffer3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="3dp"
            android:src="@drawable/border"
            app:strokeColor="@color/Valo_Color"
            app:strokeWidth="2.5dp"
            tools:layout_editor_absoluteX="410dp"
            tools:layout_editor_absoluteY="175dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ItemOffer4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="3dp"
            android:src="@drawable/border"
            app:strokeColor="@color/Valo_Color"
            app:strokeWidth="2.5dp"
            tools:layout_editor_absoluteX="410dp"
            tools:layout_editor_absoluteY="169dp" />

    </GridLayout>

    <FrameLayout
        android:id="@+id/frameLayout9"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="39dp"
                        android:layout_height="29dp"
                        android:src="@drawable/vpoints" />

                    <TextView
                        android:id="@+id/valPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="39dp"
                        android:layout_height="29dp"
                        android:src="@drawable/rpoints" />

                    <TextView
                        android:id="@+id/radPoint"
                        android:layout_width="52dp"
                        android:layout_height="29dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/kingdomIcon"
                        android:layout_width="39dp"
                        android:layout_height="29dp"
                        android:src="@drawable/kingdomcredits" />

                    <TextView
                        android:id="@+id/kingdompoints"
                        android:layout_width="52dp"
                        android:layout_height="29dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </FrameLayout>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#5A3946"
                android:text="LOG OUT"
                app:rippleColor="#C31818" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bundleFrame"
        android:layout_width="433dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="77dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>