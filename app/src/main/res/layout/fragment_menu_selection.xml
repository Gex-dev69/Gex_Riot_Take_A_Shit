        android:id="@+id/spinner1"
        android:layout_width="262dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:smsp_floatingLabelColor="#1976D2"
        app:smsp_floatingLabelText="Floating Label Text"
        app:smsp_hint="Game Mode"
        app:smsp_hintColor="#FFFFFF"
        app:smsp_isOutlined="true"
        app:smsp_itemColor="#FFFFFF"
        app:smsp_itemListBackgroundColor="#7C4DFF"
        app:smsp_itemListColor="@color/soft_black"
        app:smsp_itemListHintBackgroundColor="#FF5252"
        app:smsp_itemListHintColor="#1976D2"
        app:smsp_multilineError="false"
        app:smsp_outlinedBoxColor="@color/teal_200"
        app:smsp_selectedItemListColor="#FF5252"
        app:smsp_typeface="@font/poppins_bold" />

    <ScrollView
        android:id="@+id/kill_feed"
        android:layout_width="361dp"
        android:layout_height="63dp"
        android:background="#52000000"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_gchat_chatbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/inner_kill_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="40dp">
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingLeft="10dp"
        android:text="   CLOSE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/party_Switch"
        app:layout_constraintEnd_toStartOf="@+id/party_Switch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/holder"
        app:layout_constraintTop_toTopOf="@+id/party_Switch"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/layout_gchat_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#52000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/edit_gchat_message"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/button_gchat_send"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:hint="Enter Message"
            android:inputType="text"
            android:maxLines="6"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFEFE"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/button_gchat_send"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="?attr/selectableItemBackground"
            android:text="Send"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="OPEN"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/party_Switch"
        app:layout_constraintEnd_toEndOf="@+id/holder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/party_Switch"
        app:layout_constraintTop_toTopOf="@+id/party_Switch"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toTopOf="@+id/kill_feed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_3"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:text="START" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/player_"
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/kill_feed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_1"
                app:layout_constraintVertical_bias="0.095"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:strokeColor="#00E7FF" />

            <Button
                android:id="@+id/exit_party"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Valo_Color"
                android:text="Exit" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/player_1_title"
        android:layout_width="345dp"
        android:layout_height="26dp"
        android:autoSizeTextType="uniform"
        android:background="@color/scoreboard"
